{% extends 'base.html.twig' %}

{% block title %}Background Removed - Habesha Tools{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Background Removed Successfully</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title mb-4">Your Processed Image</h5>
                    
                    <div class="mb-4">
                        <img src="{{ asset('uploads/background-remover/' ~ imageProcess.resultImageName) }}" 
                             alt="Processed Image" 
                             class="img-fluid rounded shadow"
                             style="max-width: 100%; height: auto;">
                    </div>

                    <div class="d-flex justify-content-center gap-3">
                        <a href="{{ path('app_background_remover_download', {'id': imageProcess.id}) }}" 
                           class="btn btn-primary">
                            <i class="fas fa-download me-2"></i>Download Image
                        </a>
                        
                        <a href="{{ path('app_background_remover') }}" 
                           class="btn btn-outline-secondary">
                            <i class="fas fa-redo me-2"></i>Process Another Image
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 