{% extends 'base.html.twig' %}

{% block title %}Background Remover - Habesha Tools{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title text-center mb-4">Background Remover</h1>
                    <p class="text-center text-muted mb-4">Upload an image to remove its background. The processed image will be available for download.</p>

                    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                        <div class="mb-3">
                            {{ form_label(form.imageFile, 'Select Image', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.imageFile) }}
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-upload me-2"></i>Upload and Process
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 